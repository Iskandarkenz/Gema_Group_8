<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_all"
    tools:context=".ScreenRating">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Menurut Kamu,"
        android:textSize="25dp"
        android:fontFamily="@font/poppinsbold"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="100dp"
        android:textColor="#232D37"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/poppinsbold"
        android:text="Bukunya Seru Ngga ?"
        android:textColor="#232D37"
        android:textSize="25dp" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="170dp"
        android:src="@drawable/screen_penilaian"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Kasih Penilaian Dong"
        android:textSize="20dp"
        android:fontFamily="@font/poppinsregular"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="100dp"
        android:textColor="#232D37"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="370dp"
        android:src="@drawable/star_rating"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="580dp"
        android:background="@drawable/simpan"
        android:fontFamily="@font/poppinsbold"
        android:text="Simpan" />

</RelativeLayout>
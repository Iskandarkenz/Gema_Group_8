<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_all"
    tools:context=".MenuProfil.ScreenProfilSaya">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"/>

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_baseline_arrow_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Profil Saya"
        android:textColor="#232D37"
        android:textSize="16dp">

    </TextView>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/poto" />

    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="40dp"
        android:fontFamily="@font/poppinsregular"
        android:text="Nama Lengkap"
        android:textColor="@color/black"
        android:textSize="12dp"/>

    <EditText
        android:id="@+id/ubah_nama"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="330dp"
        android:background="@drawable/kolomsearch"
        android:fontFamily="@font/poppinsregular"
        android:hint="Ubah Nama"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:textSize="15dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="40dp"
        android:fontFamily="@font/poppinsregular"
        android:text="Umur"
        android:textColor="@color/black"
        android:textSize="12dp"/>

    <EditText
        android:id="@+id/ubah_umur"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="420dp"
        android:background="@drawable/kolomsearch"
        android:fontFamily="@font/poppinsregular"
        android:hint="Ubah Umur"
        android:paddingLeft="20dp"
        android:paddingBottom="5dp"
        android:paddingTop="10dp"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="490dp"
        android:layout_marginLeft="40dp"
        android:fontFamily="@font/poppinsregular"
        android:text="Email Aktif"
        android:textColor="@color/black"
        android:textSize="12dp"/>

    <EditText
        android:id="@+id/ubah_email"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="510dp"
        android:background="@drawable/kolomsearch"
        android:fontFamily="@font/poppinsregular"
        android:hint="Ubah Email"
        android:paddingLeft="20dp"
        android:paddingBottom="5dp"
        android:paddingTop="10dp"
        android:textSize="15dp" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="595dp"
        android:background="@drawable/color_button"
        android:backgroundTint="#FEDF16"
        android:fontFamily="@font/poppinsbold"
        android:gravity="center"
        android:text="Simpan"
        android:textColor="#000" />

</RelativeLayout>
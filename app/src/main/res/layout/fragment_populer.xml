<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".PopularFragment"
    android:orientation="vertical"
    android:background="@drawable/background_all"
    android:layout_marginRight="18dp"
    android:layout_marginLeft="18dp">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        </LinearLayout>

    </HorizontalScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="600dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shadow_putih"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsregular"
            android:text="Paling Digemari"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/lainnya1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/poppinsregular"
            android:onClick="goToMostPopular"
            android:text="Lainnya"
            android:textSize="12dp" />

    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="350dp">

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="200dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:background="@drawable/landscape_1"/>

            <ImageView
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/landscape_2"/>

            <ImageView
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/landscape_3"/>

            <ImageView
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/landscape_4"/>

        </LinearLayout>

    </HorizontalScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:paddingTop="40dp"
        android:layout_marginTop="225dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppinsregular"
            android:text="Paling Banyak Dibaca"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/lainnya2"
            android:onClick="goToMostRead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/poppinsregular"
            android:text="Lainnya"
            android:textSize="12dp" />

    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="295dp"
        android:layout_marginBottom="140dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:background="@drawable/timun_mas"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/malinkundang"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/mengtumbuhan"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:background="@drawable/danau_toba"/>

        </LinearLayout>

    </HorizontalScrollView>

</FrameLayout>


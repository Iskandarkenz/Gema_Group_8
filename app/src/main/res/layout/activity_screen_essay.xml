<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_all"
    tools:context=".ScreenEssay">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/poppinsbold"
        android:text="Bagaimana Menurutmu Ceritanya ?"
        android:textColor="#232D37"
        android:textSize="18dp" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/screen_essay" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/pendapat"
        android:ems="10"
        android:fontFamily="@font/poppinsregular"
        android:inputType="textPersonName"
        android:text="Masukkan pendapatmu" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="580dp"
        android:background="@drawable/simpan"
        android:fontFamily="@font/poppinsbold"
        android:text="Simpan" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/coolicon"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="660dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="4 dari 4"
        android:fontFamily="@font/poppinsregular"
        android:textColor="#232D37"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="670dp"
        android:textSize="18dp"/>

</RelativeLayout>